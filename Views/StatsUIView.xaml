<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:tamagotchi="clr-namespace:App_Dev_VisalStudio"
             x:Class="App_Dev_VisalStudio.StatsUIView">
    
    <Grid 
        RowDefinitions="*, *" 
        ColumnDefinitions="*, *"
        ColumnSpacing="50">

        <Label 
            Grid.Row="0"
            Grid.Column="0"
            Style="{StaticResource defaultLabelStyle}"
            
            Text="Hunger" />

        <Slider 
            Grid.Row="1"
            Grid.Column="0"
            x:Name="HungerSlider"
            Style="{StaticResource onlyDisplaySlider}"
            
            MinimumTrackColor="Brown"
            MaximumTrackColor="Gray"/>

        <Label 
            Grid.Row="0"
            Grid.Column="1"
            Style="{StaticResource defaultLabelStyle}"
            
            Text="Thirst" />

        <Slider 
            Grid.Row="1"
            Grid.Column="1"
            x:Name="ThirstSlider"
            Style="{StaticResource onlyDisplaySlider}"
            
            MinimumTrackColor="DarkBlue"
            MaximumTrackColor="Gray"/>

    </Grid>
</ContentView>
