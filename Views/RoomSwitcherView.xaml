<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:tamagotchi="clr-namespace:App_Dev_VisalStudio"
             x:Class="App_Dev_VisalStudio.RoomSwitcherView">

    <Grid        
        RowDefinitions="*, *" 
        ColumnDefinitions="*, *, *"
        ColumnSpacing="20">
        
        <ImageButton
            Grid.Row="0"
            Grid.Column="0"
            x:Name="KitchenRoomButton"
            
            Source="kitchenroombutton.png"
            Clicked="KitchenRoomButtonOnClicked"
            BackgroundColor="Transparent"/>

        <ImageButton
            Grid.Row="0"
            Grid.Column="1"
            x:Name="GardenRoomButton"
            
            Source="gardenroombutton.png"
            Clicked="GardenRoomButtonOnClicked"
            BackgroundColor="Transparent"/>

        <ImageButton
            Grid.Row="0"
            Grid.Column="2"
            x:Name="BedRoomButton"
            
            Source="bedroombutton.png"
            Clicked="BedRoomButtonOnClicked"
            BackgroundColor="Transparent"/>

        <ImageButton
            Grid.Row="1"
            Grid.Column="1"
            x:Name="SettingsRoomButton"
            
            Source="settingsicon.png"
            Clicked="SettingsRoomButtonOnClicked"
            BackgroundColor="Transparent"/>

    </Grid>
    
</ContentView>
