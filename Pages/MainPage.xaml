<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:tamagotchi="clr-namespace:App_Dev_VisalStudio"
             x:Class="App_Dev_VisalStudio.MainPage"
             BackgroundColor="Black">

    <Grid
        RowDefinitions="*, *, *, *, *" 
        RowSpacing="50"
        ColumnSpacing="50">

        <Label
            Grid.Row="0"
            Style="{StaticResource defaultLabelStyle}"
            x:Name="NameText"
            
            Text="name"/>

        <Image
           Grid.Row="1"
           x:Name="defaultPoekieImage"
            
           Source="defaultpoekie.jpg"
           Scale="3">

            <Image.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnImageClicked" />
            </Image.GestureRecognizers>
            
        </Image>

        <tamagotchi:RoomSwitcherView
            Grid.Row="2"/>

        <tamagotchi:StatsUIView
           Grid.Row="4"/>

    </Grid>

</ContentPage>
